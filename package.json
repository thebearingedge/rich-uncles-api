{
  "name": "rich-uncles-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "db:start": "docker-compose up --build -d",
    "db:stop": "docker-compose down",
    "db:make": "pg-bump create",
    "db:up": "pg-bump up",
    "db:down": "pg-bump down",
    "db:cycle": "run-s -s db:down db:up",
    "lint": "eslint .",
    "test": "run-s -s db:cycle && mocha --opts mocha.opts",
    "tdd": "npm test -- -w -R min",
    "cover": "nyc npm test"
  },
  "pgBump": {
    "require": [
      "dotenv/config"
    ],
    "files": "database/migrations/",
    "connectionVar": "POSTGRES_URL"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "api/**/*.js"
    ],
    "exclude": [
      "**/test/**",
      "**/*.test.*",
      "coverage/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "overrides": [
      {
        "files": [
          "**/test/*.js",
          "**/*.test.js"
        ],
        "env": {
          "mocha": true
        }
      },
      {
        "files": [
          "{api,database,server}/**/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "padded-blocks": 0,
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/rich-uncles-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thebearingedge/rich-uncles-api/issues"
  },
  "homepage": "https://github.com/thebearingedge/rich-uncles-api#readme",
  "dependencies": {
    "chai": "4.2.0",
    "chai-struct": "3.0.4",
    "dotenv": "6.2.0",
    "esm": "3.2.5",
    "pg-bump": "3.0.0-beta.4"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.14.1",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "13.3.0"
  }
}
